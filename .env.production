# Production Environment Configuration  
TRADING_ENV=production
NODE_ENV=production

# Binance Production API Credentials
BINANCE_API_KEY=YOUR_PRODUCTION_API_KEY
BINANCE_API_SECRET=YOUR_PRODUCTION_SECRET

# Trading Symbol (can be overridden via command line)
TRADING_SYMBOL=SOLUSDT

# Capital Management - Production (conservative amounts)
INITIAL_CAPITAL=300
DAILY_PROFIT_TARGET=12
MAX_DAILY_LOSS=30

# Grid Trading Settings
GRID_LEVELS=5
GRID_SPACING_PERCENTAGE=0.5

# Fear and Greed Index - Production (faster refresh)
FEAR_GREED_INDEX_ENABLED=true
COINMARKETCAP_API_KEY=YOUR_COINMARKETCAP_API_KEY
FEAR_GREED_CACHE_HOURS=6
FEAR_GREED_RETRY_ATTEMPTS=5
FEAR_GREED_RETRY_DELAY=3000
FEAR_GREED_FALLBACK_SCRAPER=true

# Monitoring - Production
LOG_LEVEL=info
ENABLE_DISCORD_NOTIFICATIONS=true
DISCORD_WEBHOOK_URL=YOUR_DISCORD_WEBHOOK
