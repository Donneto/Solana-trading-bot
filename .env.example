# Environment Selection
TRADING_ENV=testnet

# Binance API Credentials (Get from Binance API Management)
BINANCE_API_KEY=YOUR_API_KEY_HERE
BINANCE_API_SECRET=YOUR_SECRET_HERE

# Trading Symbol (or use command line: npm run dev:ada)
TRADING_SYMBOL=SOLUSDT

# Capital Management (adjust for your risk tolerance)
INITIAL_CAPITAL=300
DAILY_PROFIT_TARGET=12
MAX_DAILY_LOSS=30

# Grid Trading Settings
GRID_LEVELS=5
GRID_SPACING_PERCENTAGE=0.5

# Fear and Greed Index (Optional - for market sentiment)
FEAR_GREED_INDEX_ENABLED=true
COINMARKETCAP_API_KEY=YOUR_COINMARKETCAP_API_KEY

# Monitoring
LOG_LEVEL=info
ENABLE_DISCORD_NOTIFICATIONS=false
DISCORD_WEBHOOK_URL=

# NOTE: Risk management parameters (stop loss, take profit, position sizes, etc.) 
# are now handled automatically by coin-specific profiles in the config files.
# No need to set them manually unless you want to override the defaults.