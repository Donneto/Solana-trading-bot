# Copy this file to .env for live trading
# OR copy testnet.env to your environment for testnet trading
# The bot automatically loads testnet.env when BINANCE_TESTNET=true

BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_secret_here
BINANCE_TESTNET=false

# Trading Configuration - Live Trading ($300 capital)
TRADING_SYMBOL=SOLUSDT
INITIAL_CAPITAL=300
DAILY_PROFIT_TARGET=12
MAX_DAILY_LOSS=30
POSITION_SIZE_PERCENTAGE=10

# Risk Management
STOP_LOSS_PERCENTAGE=2
TAKE_PROFIT_PERCENTAGE=3
TRAILING_STOP_PERCENTAGE=1.5
MAX_OPEN_POSITIONS=3

# Algorithm Parameters
MEAN_REVERSION_PERIOD=20
DEVIATION_THRESHOLD=2
GRID_LEVELS=5
GRID_SPACING_PERCENTAGE=0.5

# Monitoring
LOG_LEVEL=info
ENABLE_DISCORD_NOTIFICATIONS=false
DISCORD_WEBHOOK_URL=

# Development
NODE_ENV=development